@using WebBanSach.Models
@{
    var user = Session["User"] as User;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Whisperwood</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f6f2ec;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background: #7d6b5e !important;
            padding: 12px 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white !important;
        }

        .navbar .nav-link {
            color: white !important;
            font-weight: 600;
            margin-right: 20px;
            font-size: 1rem;
        }

        .nav-icon {
            position: relative;
            display: inline-block;
            color: white;
            font-size: 22px;
            margin-right: 16px;
        }

        .icon-badge {
            position: absolute;
            top: -5px;
            right: -8px;
            min-width: 14px;
            height: 14px;
            padding: 0 4px;
            background: #dc3545;
            color: white;
            font-size: 10px;
            font-weight: bold;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 1;
            font-family: Arial, sans-serif;
        }




        .dropdown-menu {
            background: white;
            border-radius: 10px;
            border: 1px solid #ddd;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .dropdown-item:hover {
            background: #f2f2f2;
        }

        .btn-login {
            background: white;
            color: #7d6b5e !important;
            font-weight: 600;
            padding: 6px 18px;
            border-radius: 8px;
            margin-right: 10px;
        }

        .btn-register {
            border: 2px solid white;
            color: white !important;
            font-weight: 600;
            padding: 6px 18px;
            border-radius: 8px;
        }
    </style>
    @RenderSection("styles", required: false)
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">

            <a href="/" class="navbar-brand d-flex align-items-center">
                <img src="~/Content/images/whisperwood-logo.png"
                     style="height:40px;width:40px;border-radius:50%;margin-right:10px;" />
                Whisperwood
            </a>

            <div class="collapse navbar-collapse">

                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Book">Sách</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Liên hệ</a></li>

                    @if (user != null && user.RoleID == 2)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Admin">Quản trị</a></li>
                    }
                </ul>

                <div class="d-flex align-items-center">

                    @if (user != null)
                    {
                        <!-- Wishlist -->
                        <a href="/Wishlist" class="nav-icon">
                            <i class="bi bi-heart-fill"></i>
                            <span class="icon-badge">@Session["WishlistCount"] </span>
                        </a>

                        <!-- Cart -->
                        <a href="/Cart" class="nav-icon">
                            <i class="bi bi-cart-fill"></i>
                            <span class="icon-badge">@Session["CartCount"] </span>
                        </a>

                        <!-- USER DROPDOWN -->
                        <div class="dropdown">
                            <a class="nav-icon dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @user.FullName
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/Order/History">Lịch sử đơn hàng</a></li>
                                <li><hr /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- NOT LOGGED -->
                        <a href="/Account/Login" class="btn btn-login">Đăng nhập</a>
                        <a href="/Account/Register" class="btn btn-register">Đăng ký</a>
                    }

                </div>
            </div>
        </div>
   

    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
