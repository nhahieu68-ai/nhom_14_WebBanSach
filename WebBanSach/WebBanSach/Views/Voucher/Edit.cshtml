@model WebBanSach.Models.Coupon

@{
    ViewBag.Title = "Chỉnh sửa Mã giảm giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa Mã giảm giá: @Model.Code</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CouponID)

        <div class="form-group">
            @Html.LabelFor(model => model.Code, "Mã Code", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiscountPercent, "Phần trăm giảm", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiscountPercent, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "100" } })
                @Html.ValidationMessageFor(model => model.DiscountPercent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpiredAt, "Ngày hết hạn", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    // Định dạng DateTime để hiển thị đúng trong input type="datetime-local"
                    string expDate = Model.ExpiredAt.HasValue ? Model.ExpiredAt.Value.ToString("yyyy-MM-ddTHH:mm") : "";
                }
                <input type="datetime-local" name="ExpiredAt" class="form-control" value="@expDate" />
                <small class="form-text text-muted">Nếu để trống, mã sẽ không có ngày hết hạn.</small>
                @Html.ValidationMessageFor(model => model.ExpiredAt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>