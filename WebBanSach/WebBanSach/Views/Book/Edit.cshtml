@model WebBanSach.Models.Book

<h2>Sửa sách</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookID)

    <div class="form-group">
        <label>Tên sách</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tác giả</label>
        <input type="text" name="AuthorName"
               value="@(Model.Authors.FirstOrDefault()?.Name)"
               class="form-control" />
    </div>

    <div class="form-group">
        <label>Giá</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Ảnh URL</label>
        <input type="text" name="ImageUrl"
               value="@(Model.BookImages.FirstOrDefault()?.ImageUrl)"
               class="form-control" />
    </div>

    <div class="form-group">
        <label>Thể loại:</label><br />

        @foreach (var cat in ViewBag.CategoryList)
        {
            bool isChecked = Model.Categories.Any(c => c.CategoryID == cat.CategoryID);

            <label style="display:block;">
                <input type="checkbox"
                       name="SelectedCategories"
                       value="@cat.CategoryID"
                       @(isChecked ? "checked" : "") />
                @cat.CategoryName
            </label>
        }
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>

    <button class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
}
