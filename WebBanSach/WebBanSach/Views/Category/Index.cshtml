@model IEnumerable<WebBanSach.Models.Category>

@{
    ViewBag.Title = "Quản lý Danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fa fa-tags"></i> Quản lý Danh mục</h2>

<p>
    @Html.ActionLink("Thêm Danh mục mới", "Create", null, new { @class = "btn btn-success" })
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mã Danh mục</th>
            <th>Tên Danh mục</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>