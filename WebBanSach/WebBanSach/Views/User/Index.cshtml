@model IEnumerable<WebBanSach.Models.User>

@{
    ViewBag.Title = "Quản lý Người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fa fa-users"></i> Quản lý Người dùng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Quyền hạn</th>
            <th>Ngày tạo</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserID</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    @{
                        string badgeClass = item.RoleID == 2 ? "label-danger" : "label-primary";
                    }
                    <span class="label @badgeClass">@(item.Role?.RoleName ?? "Khách hàng")</span>
                </td>
                <td>@item.CreatedAt.Value.ToString("dd/MM/yyyy")</td>
                <td>
                    @Html.ActionLink("Sửa quyền", "Edit", new { id = item.UserID }, new { @class = "btn btn-sm btn-info" })
                    @if (item.RoleID != 2) // Tránh xóa Admin
                    {
                        @Html.ActionLink("Xóa", "Delete", new { id = item.UserID }, new { @class = "btn btn-sm btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>