@model WebBanSach.Models.User

@{
    ViewBag.Title = "Xóa Người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa tài khoản này?</h3>
<div class="alert alert-danger">
    **Cảnh báo:** Việc xóa tài khoản sẽ xóa tất cả đơn hàng, giỏ hàng, và đánh giá liên quan!
</div>
<div>
    <h4>Thông tin tài khoản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>@Html.DisplayFor(model => model.UserID)</dd>

        <dt>Email:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Họ và Tên:</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>

        <dt>Quyền hạn:</dt>
        <dd>@(Model.Role?.RoleName ?? "Chưa có Role")</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Hủy bỏ và Quay lại danh sách", "Index")
        </div>
    }
</div>