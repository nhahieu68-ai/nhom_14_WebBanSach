@model IEnumerable<WebBanSach.Models.Order>

<h2>Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tổng tiền</th>
                <th>Chi tiết</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderID</td>
                    <td>@String.Format("{0:N0}₫", o.TotalAmount)</td>
                    <td>
                        <a href="/Order/Details/@o.OrderID" class="btn btn-sm btn-primary">
                            Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
